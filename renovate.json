{
  "extends": [
    "config:base",
    ":dependencyDashboard",
    "group:linters"
  ],
  "git-submodules": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"],
    "stabilityDays": 0,
    "dependencyDashboardApproval": true
  },
  "includePaths": [
    "package.json",
    "website/package.json",
    ".gitmodules"
  ],
  "rangeStrategy": "update-lockfile",
  "commitBody": "[skip netlify]",
  "postUpdateOptions": ["yarnDedupeHighest"]
}
