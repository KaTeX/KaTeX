{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2023", "dom"],
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": ["katex.ts", "src/**/*", "contrib/**/*", "test/**/*"]
}
